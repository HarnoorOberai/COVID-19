DESC conv19

CREATE KEYSPACE conv19 WITH replication = {'class': 'SimpleStrategy', 'replication_factor': '1'};

CREATE TABLE conv19.country (
    Country text PRIMARY KEY,
    CountryCode text,
    date timestamp,
    newconfirmed int,
    newdeaths int,
    newrecovered int,
    slug text,
    totalconfirmed int,
    totaldeaths int,
    totalrecovered int
) ;

CREATE TABLE conv19.stats (
    id int PRIMARY KEY,
    newconfirmed int,
    newdeaths int,
    newrecovered int,
    totalconfirmed int,
    totaldeaths int,
    totalrecovered int
);

COPY conv19.stats(ID,NewConfirmed,NewDeaths,NewRecovered,TotalConfirmed,TotalDeaths,TotalRecovered)
FROM '/Users/harnooroberai/Data_Science/Git/MiniProject/CloudComputingMiniProject/Global.csv' WITH HEADER=TRUE;

